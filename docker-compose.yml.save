    #restart: always
    #environment:
    #  - POSTGRES_USER=hive
    #  - POSTGRES_PASSWORD=hive
    #ports:
    #  - '5432:5432'
    container_name: hive-metastore-postgresql

  #hive-metastore-mysql:
